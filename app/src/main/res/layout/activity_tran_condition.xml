<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiupin.jiupinhui.activity.TranConditionActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发布动态"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/bg_release"
            android:gravity="center"
            android:padding="2dp"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:hint="说说分享心得......"
        android:lines="10"
        android:maxLines="10"
        android:padding="12dp"
        android:textColor="@color/light_black"
        android:textColorHint="@color/shallow_black"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_pic"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/black_33"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_tran_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_pic"
            android:layout_alignBottom="@+id/iv_user_pic"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|top"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/shallow_black"
            android:textSize="14sp"
            />
    </RelativeLayout>
</LinearLayout>
