<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="12dp"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/light_black"
        />

    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_user_name"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/light_black"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_name"
        android:layout_alignStart="@+id/tv_user_name"
        android:layout_below="@+id/tv_user_phone"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/light_black"
        android:layout_alignRight="@+id/tv_user_phone"
        android:layout_alignEnd="@+id/tv_user_phone"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBackground"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="12dp"
        />

    <RadioButton
        android:id="@+id/rb_default_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/radiobutton_bg_selector"
        android:layout_alignLeft="@id/tv_address"
        android:layout_below="@id/view"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:checked="false"
        android:button="@null"
        android:drawablePadding="5dp"
        android:text="默认地址"
        android:textColor="@color/light_black"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/tv_delete_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rb_default_address"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/delete"
        android:text="删除"
        android:textColor="@color/light_black"
        android:textSize="11sp"
        />
    <TextView
        android:id="@+id/tv_compile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toLeftOf="@+id/tv_delete_address"
        android:layout_alignTop="@+id/rb_default_address"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/compile_address"
        android:text="编辑"
        android:textColor="@color/light_black"
        android:textSize="11sp"
        />

</RelativeLayout>