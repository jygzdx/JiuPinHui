<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiupin.jiupinhui.activity.QuestionActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back_base"
            />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="高级套餐配送时间"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="高级套餐配送时间"
        android:textColor="@color/light_black"
        android:textSize="16sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="为您解答"
        android:textColor="@color/mainTextColor"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑，如丝般顺滑"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_question_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="注:系统自动将于清明节后发货，顺延配送时间......"
        android:textColor="@color/light_red"
        android:textSize="12sp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mainBackground"/>
    <TextView
        android:id="@+id/tv_contact_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/next_yellow"
        android:padding="12dp"
        android:text="联系客服"
        android:textColor="@color/light_red"
        android:textSize="12sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"/>
</LinearLayout>
