<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="15dp"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        >

        <com.jiupin.jiupinhui.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_condition_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="耐磨"
                android:textColor="@color/black_33"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tv_condition_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_condition_nickname"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="2017-07-15"
                android:textColor="@color/shallow_black"
                android:textSize="10sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_condition_nickname"
                android:src="@drawable/daren"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/zhishiqi_bottom"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:maxLines="5"
                android:padding="8dp"
                android:text="textview"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_user_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:overScrollMode="never"
                >
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_transpond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="转发了"
                        android:textColor="@color/light_black"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_transpond_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@binzai"
                        android:textColor="@color/mainTextColor"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="#fafafa"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_transpond_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        android:padding="8dp"
                        android:textColor="@color/light_black"
                        android:textSize="12sp"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_tran_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        >

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="删除"
                android:textColor="@color/black_33"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_move_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="置顶"
                android:textColor="@color/black_33"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_only_youself_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅自己可见"
                android:textColor="@color/black_33"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBackground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/mainBackground"
        >

        <LinearLayout
            android:id="@+id/ll_transmit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="转发"
                android:textColor="@color/shallow_black"
                android:textSize="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transmit"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_community_com"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="评论"
                android:textColor="@color/shallow_black"
                android:textSize="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_com"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_set_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@color/white"
                android:text="点赞"
                android:textSize="10dp"
                />

            <ImageView
                android:id="@+id/iv_set_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/set_like"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>