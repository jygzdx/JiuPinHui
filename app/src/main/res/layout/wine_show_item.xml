<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">


    <ImageView
        android:id="@+id/iv_wine_show"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tv_wine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_wine_show"
        android:layout_toLeftOf="@+id/iv_wine_pay"
        android:lines="1"
        android:text="卡洛斯"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_wine_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_wine_name"
        android:layout_below="@+id/tv_wine_name"
        android:layout_toLeftOf="@+id/iv_wine_pay"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:text="始于1930年"
        android:lines="1"
        android:textSize="10sp"
        android:textColor="#666666"
        />

    <ImageView
        android:id="@+id/iv_wine_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/btn_shopping"/>
</RelativeLayout>