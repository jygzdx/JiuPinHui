<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiupin.jiupinhui.activity.SendCommentActivity">
<!--标题头-->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back_base"
            />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发表评价"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/iv_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>
<!--评论等级-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        >

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pic1"
            />

        <RadioGroup
            android:id="@+id/rg_comment_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rb_good_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/comment_grade_selector"
                android:drawablePadding="7dp"
                android:text="好评"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                />

            <RadioButton
                android:id="@+id/rb_middle_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/comment_grade_selector"
                android:drawablePadding="7dp"
                android:text="中评"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                />

            <RadioButton
                android:id="@+id/rb_bad_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/comment_grade_selector"
                android:drawablePadding="7dp"
                android:text="差评"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBackground"/>
    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:lines="5"
        android:paddingTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:gravity="top"
        android:hint="@string/comment_hint"
        android:textSize="12dp"
        android:textColor="@color/thin_black"
        />

    <LinearLayout
        android:id="@+id/ll_add_pictrue"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/add_picture"
            />

        <LinearLayout
            android:id="@+id/ll_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="7dp"
            android:orientation="horizontal"
            >

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mainBackground"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@drawable/goods_store"
        android:drawablePadding="10dp"
        android:text="酒品会旗舰店"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="23dp"
            android:text="描述相符"
            android:textColor="@color/black_66"
            android:textSize="12sp"
            />
        <com.jiupin.jiupinhui.widget.RatingBarView
            android:id="@+id/rbv_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:starCount="5"
            app:starEmpty="@drawable/star_unselected"
            app:starFill="@drawable/star_selected"
            app:starImageSize="40dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="23dp"
            android:text="物流服务"
            android:textColor="@color/black_66"
            android:textSize="12sp"
            />
        <com.jiupin.jiupinhui.widget.RatingBarView
            android:id="@+id/rbv_express"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:starCount="5"
            app:starEmpty="@drawable/star_unselected"
            app:starFill="@drawable/star_selected"
            app:starImageSize="40dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="23dp"
            android:text="服务态度"
            android:textColor="@color/black_66"
            android:textSize="12sp"
            />
        <com.jiupin.jiupinhui.widget.RatingBarView
            android:id="@+id/rbv_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:starCount="5"
            app:starEmpty="@drawable/star_unselected"
            app:starFill="@drawable/star_selected"
            app:starImageSize="40dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"/>
</LinearLayout>
