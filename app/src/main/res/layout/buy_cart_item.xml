<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_store_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/radiobotton_unchecked"
            android:visibility="gone"
            />
        
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="67dp"
            android:layout_height="22dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="酒品会旗舰店"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_item_compile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@null"
            android:text="编辑"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#f9f9f9"
        >

        <ImageView
            android:id="@+id/iv_goods_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/radiobotton_unchecked"
            />

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/pic1"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_full_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12dp"
                    android:text="这是一款美酒这是一款美酒这是一款美酒这是一款美酒这是一款美酒"
                    android:textColor="@color/light_black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_goods_down_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:lines="1"
                    android:text="￥599"
                    android:textColor="@color/mainTextColor"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_goods_deal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_goods_down_price"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:layout_marginRight="12dp"
                    android:text="￥799"
                    android:textColor="@color/shallow_black"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/tv_goods_start_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:layout_marginRight="12dp"
                    android:text="x1"
                    android:textColor="@color/light_black"
                    android:textSize="10sp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_compile_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="#fff9f9f9"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/subtract"
                    />
                <TextView
                    android:id="@+id/tv_goods_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/light_black"
                    />
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/add"
                    />
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#BE2120"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#EEEFF1"
    />
</LinearLayout>