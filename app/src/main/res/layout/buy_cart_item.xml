<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mainBackground"
              android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RadioButton
            android:id="@+id/rb_store_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@null"
            android:background="@drawable/radiobutton_bg_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/goods_store"
            android:drawablePadding="10dp"
            android:text="酒品会旗舰店"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn_item_compile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@null"
            android:text="编辑"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <RadioButton
            android:id="@+id/rb_goods_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@null"
            android:background="@drawable/radiobutton_bg_selector"
            />
        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/pic1"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:text="这是一款美酒这是一款美酒这是一款美酒这是一款美酒这是一款美酒"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_goods_down_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:lines="1"
                android:text="￥599"
                android:textColor="@color/mainTextColor"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_goods_deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_goods_down_price"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:layout_marginRight="12dp"
                android:text="￥799"
                android:textColor="@color/shallow_black"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/tv_goods_deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:layout_marginRight="12dp"
                android:text="x1"
                android:textColor="@color/light_black"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>