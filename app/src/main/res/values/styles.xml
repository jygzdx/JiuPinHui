<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>
    <!-- 启动界面style -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="listDivider">
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>


    <style name="main_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--底部radiobutton-->
    <style name="main_radiobutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <!--首页轮播图下方类别item-->
    <style name="home_sort_item">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--商城酒的应用场合-->
    <style name="store_function_fragment">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <!--搜索框-->
    <style name="search_edittext" parent="@style/base_search_edittext">
        <item name="android:drawableLeft">@drawable/icon_search</item>
        <item name="android:background">@drawable/search_shape</item>
    </style>
    <!--基础搜索框-->
    <style name="base_search_edittext">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--tablayout样式-->
    <style name="tabLayout_design">
        <item name="android:textSize">14sp</item>
    </style>
    <!--progressbar样式-->
    <style name="mProgress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>
    <!--ratingbar样式-->
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <!--选择城市的popupwindow的显示及隐藏动画-->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow</item>
        <item name="android:windowExitAnimation">@anim/pophide</item>
    </style>
</resources>
